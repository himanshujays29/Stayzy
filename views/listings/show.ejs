<% layout('/layout/layout') -%>
<script>
  const listing = <%- JSON.stringify(listing) %>;
</script>
<a href="/listings" class="back-to-property btp-show">
  <i class="fas fa-arrow-left"></i> Back to Listings
</a>
<div class="listing-show">
  <div class="listing-card show-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="Listing image"
    />
    <div class="card-body">
      <div class="own-rate">
        <div class="card-text-owner">
          Owned by <i> <%= listing.owner.username %> </i>
        </div>
        <div class="avg-rating-box">
          <p class="starability-result" data-rating="<%= avgRating %>"></p>
          <span>(<%= listing.reviews.length %> reviews)</span>
        </div>
      </div>
      <h3><%= listing.title %></h3>
      <div class="listing-location">
        <i class="fa-solid fa-location-dot"></i>
        <span><%= listing.location %>, <%= listing.country %></span>
      </div>
      <div class="price-box">
        <h4 class="price">â‚¹<%= listing.price.toLocaleString("en-IN") %></h4>
        <p class="per-night">per night</p>
      </div>
      <p class="dicr-box"><%= listing.description %></p>
    </div>
  </div>

  <%if(currUser && listing.owner._id.equals(currUser._id)) { %>
  <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn btn-dark"
      >Edit</a
    >

    <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
      <button class="btn btn-dark">Delete</button>
    </form>
  </div>
  <% } %>

  <div class="">
    <% if(currUser) { %>
    <hr />
    <h4>Leave a Review</h4>
    <form
      method="post"
      action="/listings/<%= listing.id %>/reviews"
      novalidate
      class="needs-validation"
    >
      <div class="">
        <label class="form-lable" for="rating">Rating</label>
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="">
        <label class="form-lable" for="comment">Comments</label>
        <textarea
          name="review[comment]"
          class="form-control"
          rows="5"
          cols="30"
          id="comment"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <% } %>
    <hr />
    <% if(listing.reviews.length> 0) { %>
    <div class="row">
      <p><b>All Reviews</b></p>
      <% for(review of listing.reviews) { %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">@<%= review.author.username %></h5>
          <p
            class="starability-result card-text"
            data-rating="<%= review.rating %>"
          ></p>
          <p class="card-text"><%= review.comment %></p>
        </div>
        <form
          class=""
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
  <div class="">
    <h3>Where you'll be</h3>
    <p><%= listing.location %>, <%= listing.country %></p>
    <div id="map"></div>
  </div>
</div>

<script src="/JS/map.js"></script>
