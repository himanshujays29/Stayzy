<% layout('/layout/layout') -%>
  <script>
    const listing = <%- JSON.stringify(listing) %>;
  </script>
  <a href="/listings" class="back-to-property btp-show">
    <i class="fas fa-arrow-left"></i> Back to Listings
  </a>
  <div class="listing-show">
    <div class="listing-card show-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing image" />
      <div class="card-body">
        <div class="own-rate">
          <div class="card-text-owner">
            Owned by <i>
              <%= listing.owner.username %>
            </i>
          </div>
          <div class="avg-rating-box">
            <% for (let i=1; i <=5; i++) { %>
              <i class="fa-star <%= i <= Math.round(avgRating) ? 'fas text-warning' : 'far text-muted' %>"></i>
              <% } %>
                <span>(<%= listing.reviews.length %> reviews)</span>
          </div>
        </div>
        <h3>
          <%= listing.title %>
        </h3>
        <div class="listing-location">
          <i class="fa-solid fa-location-dot"></i>
          <span>
            <%= listing.location %>, <%= listing.country %>
          </span>
        </div>
        <div class="price-box">
          <h4 class="price">â‚¹<%= listing.price.toLocaleString("en-IN") %>
          </h4>
          <p class="per-night">per night</p>
        </div>
        <% if (listing.hostMobile) { %>
          <div class="mt-2 listing-location">
            <i class="fas fa-phone"></i>
            <strong>Host Contact:</strong>
            <a href="tel:<%= listing.hostMobile %>">
              <%= listing.hostMobile %>
            </a>
          </div>
          <% } %>
            <p class="dicr-box">
              <%= listing.description %>
            </p>
      </div>
    </div>

    <%if(currUser && listing.owner._id.equals(currUser._id)) { %>
      <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn btn-dark">
          <i class="fa-regular fa-pen-to-square"></i> Edit</a>

        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
          <button class="btn btn-dark">
            <i class="fa-regular fa-trash-can" style="color: #ffffff"></i> Delete
          </button>
        </form>
      </div>
      <% } %>

        <div class="reviews-section">
          <% if(currUser) { %>
            <div class="review-section">
              <h3 class="reviews-heading">Reviews</h3>

              <div class="review-card">
                <h4 class="review-subheading">Add Your Review</h4>

                <form method="post" action="/listings/<%= listing.id %>/reviews" novalidate
                  class="review-form needs-validation">
                  <div class="review-field">
                    <label class="review-label" for="rating">Rating</label>
                    <fieldset class="starability-slot">
                      <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                        aria-label="No rating." />
                      <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                      <label for="first-rate1" title="Terrible">1 star</label>
                      <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                      <label for="first-rate2" title="Not good">2 stars</label>
                      <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                      <label for="first-rate3" title="Average">3 stars</label>
                      <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                      <label for="first-rate4" title="Very good">4 stars</label>
                      <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                      <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                  </div>

                  <div class="review-field">
                    <label class="review-label" for="comment">Comment</label>
                    <textarea name="review[comment]" class="review-textarea" rows="3" id="comment" required
                      placeholder="Share your experience..."></textarea>
                    <div class="invalid-feedback">
                      Please add some comments for review
                    </div>
                  </div>

                  <button class="review-submit-btn">Submit Review</button>
                </form>
              </div>
            </div>

            <% } %>
              <% if(listing.reviews.length> 0) { %>
                <div class="all-reviews-section">
                  <h4>All Reviews</h4>
                  <div class="reviews-grid">
                    <% for (let review of listing.reviews) { %>
                      <div class="all-review-card">
                        <div class="review-header">
                          <div>
                            <h6 class="review-author">
                              <%= review.author.username %>
                            </h6>
                            <p class="review-date">
                              <%= review.createdAt.toISOString().split('T')[0] %>
                            </p>
                          </div>
                          <div class="review-stars">
                            <% for (let i=1; i <=5; i++) { %>
                              <i class="fa-star <%= i <= review.rating ? 'fas text-warning' : 'far text-muted' %>"></i>
                              <% } %>
                                <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
                                  <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                    method="post" class="delete-review-form">
                                    <button class="delete-review-btn">
                                      <i class="fa-regular fa-trash-can"></i>
                                    </button>
                                  </form>
                                  <% } %>
                          </div>
                        </div>

                        <p class="review-text">
                          <%= review.comment %>
                        </p>
                      </div>
                      <% } %>
                  </div>
                </div>
                <% } %>
        </div>
        <div class="map-section">
          <h3>Where you'll be</h3>
          <div class="listing-location">
            <i class="fa-solid fa-location-dot"></i>
            <span>
              <%= listing.location %>, <%= listing.country %>
            </span>
          </div>
          <div id="map"></div>
        </div>
  </div>

  <script src="/JS/map.js"></script>