<% layout('/layout/layout') -%>
        <br><br>
        <h2>Create a New Listing</h2>
       
        <div class="row">
            <div class="col-8 offset-2">

                <form action="/listings" method="post" novalidate class="needs-validation">

                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input name="listing[title]" class="form-control" type="text" placeholder="Add a catchy title" required>
                        <div class="valid-feedback">
                           Title looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="discription">Description</label><br>
                        <textarea cols="104" name="listing[description]" required></textarea>
                        <div class="invalid-feedback">
                            Please enteer a short discription.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-lable">Image URL</label>
                        <input name="listing[image]" class="form-control" type="text"
                            placeholder="enter image URL/Link">
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-lable">Price</label>
                            <input name="listing[price]" class="form-control" placeholder="&#8377; 1200" required>
                            <div class="invalid-feedback">
                                Price should be valid.
                            </div>
                        </div>
                        <div class="mb-3 col-md-8" >
                            <label for="country" class="form-lable">Country</label>
                            <input name="listing[country]" class="form-control" type="text" placeholder="India" required>
                            <div class="invalid-feedback">
                                Country name should be valid.
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-lable">Location</label>
                        <input name="listing[location]" class="form-control" type="text" placeholder="Jaipur, Rajasthan" required>
                        <div class="invalid-feedback">
                            Location should be valid.
                        </div>
                    </div>
               
                    <button class="btn btn-dark add-btn mt-3">Add</button>
                    <br><br>
                </form>
            </div>
        </div>
